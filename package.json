{
  "name": "bitrix24-mcp-server",
  "version": "1.0.0",
  "type": "module",
  "description": "Bitrix24 MCP Server for AI Agent Integration - Connect Claude Desktop to Bitrix24 CRM",
  "main": "./build/index.js",
  "bin": {
    "bitrix24-mcp-server": "./build/index.js"
  },
  "scripts": {
    "prebuild": "node -e \"const fs = require('fs'); if (!fs.existsSync('build')) fs.mkdirSync('build', {recursive: true});\"",
    "build": "tsc",
    "build:unix": "tsc && chmod +x build/index.js",
    "dev": "tsc --watch",
    "start": "node build/index.js",
    "start:http": "node http-streamable-server.js",
    "start:n8n": "node n8n-api-server.js",
    "test": "node test/integration.test.js",
    "test:unit": "node test/unit/search-crm.test.js",
    "test:all": "npm run test:unit && npm run test",
    "prepublishOnly": "npm run build",
    "azure:start": "node http-streamable-server.js"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "files": [
    "build/",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "dotenv": "^17.2.3",
    "node-fetch": "^3.3.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/node-fetch": "^2.6.9",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "bitrix24",
    "crm",
    "ai",
    "claude",
    "automation",
    "mcp-server"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/bitrix24-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/bitrix24-mcp-server/issues"
  },
  "homepage": "https://github.com/yourusername/bitrix24-mcp-server#readme",
  "author": "Your Name <your.email@example.com>",
  "license": "MIT"
}
